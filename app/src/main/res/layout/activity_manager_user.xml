<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hzshang.faceunlock.ManagerUser">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/menu_add_user"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp">

            <ImageView
                android:id="@+id/image_group_add"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_group_add" />

            <TextView
                android:id="@+id/text_group"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="@string/add_user"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_array" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorTextBack"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="@string/user_list"
            android:textAlignment="textStart" />

        <ListView
            android:id="@+id/mgr_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
